<UserControl x:Class="SQLConsole.UI.Controls.SqlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" mc:Ignorable="d" d:DesignHeight="300"
             d:DesignWidth="300">
    <avalonedit:TextEditor SyntaxHighlighting="{DynamicResource TSQLSyntax}" ShowLineNumbers="True"
                           FontFamily="Consolas" FontSize="14" Name="SqlScript" 
                           
                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                           TextChanged="SqlScript_TextChanged"
                           ></avalonedit:TextEditor>
</UserControl>